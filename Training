    class LakeCarp
    {
        public string Name { get; set; }
        public int Age { get; set; }
        public double Weight { get; set; }
        public bool isGold { get; set; }
        public string Area { get; set; }

    }

    class Program
    {
        static void Main(string[] args)
        {
            List<LakeCarp> carps = new List<LakeCarp>()
            {
                new LakeCarp() { Name = "zibyn", Weight = 12.32, Age = 12, isGold = true, Area="swamp" },
                new LakeCarp() { Name = "hijame", Weight = 5.2, Age = 33, isGold = false,Area="lake" },
                new LakeCarp() { Name = "werify", Weight = 43.3, Age = 150, isGold = true, Area="river" },
                new LakeCarp() { Name = "jadoba", Weight = 38.43, Age = 19, isGold = false, Area="swamp" },
                new LakeCarp() { Name = "jujun", Weight = 58.73, Age = 14, isGold = false, Area="lake" },
                new LakeCarp() { Name = "jadoba", Weight = 38.43, Age = 19, isGold = false, Area="river" },
                new LakeCarp() { Name = "ishish", Weight = 8.43, Age = 5, isGold = true, Area="swamp" },
                new LakeCarp() { Name = "ururu", Weight = 34.43, Age = 44, isGold = false, Area="lake" },
                new LakeCarp() { Name = "jamada", Weight = 68.30, Age = 93, isGold = false,Area="river" },
                new LakeCarp() { Name = "kirkun", Weight = 38.43, Age = 28, isGold = true, Area="swamp" },
            };

            List<string> checkingOnNullWithLinq1 = new List<string> { };
            if (checkingOnNullWithLinq1.Count == 0)
            {
                Console.WriteLine("Пустой");
            }
            else
            {
                Console.WriteLine("Не пустой");
            }


            List<string> checkingOnNullWithLinq2 = new List<string> { };
            if (!checkingOnNullWithLinq2.Any())
            {
                Console.WriteLine("Пустой");
            }
            else
            {
                Console.WriteLine("Не пустой");
            }


            var containsAdInName = carps.Where(n => n.Name.Contains("ad") & n.Name != null);
            foreach (var i in containsAdInName)
            {

                Console.WriteLine($"{i.Name} {i.Age}");
            }

            
            var amountOfCarpsYoungerThenAvgAge = carps.Where(a => a.Age < carps.Average(a => a.Age)).Count();
            Console.WriteLine(amountOfCarpsYoungerThenAvgAge);


            var areaCarpWeight = carps.GroupBy(p => p.Area).Select(g => new { Area = g.Key, Weight = g.Sum(w => w.Weight) });
            foreach (var i in areaCarpWeight)
            {
                Console.WriteLine(i);
            }


            var carpWeight = carps.GroupBy(p => p.isGold).Select(g => new { isGold = g.Key, Weight = g.Sum(w => w.Weight) });
            foreach (var i in carpWeight)
            {
                Console.WriteLine(i);
            }


            var areal = carps.Select(a => a.Area).Distinct();
            foreach (var i in areal)
            {
                Console.WriteLine(i);
            }



            var goldCarpWeight = carps.Where(x => x.isGold == true).Sum(w => w.Weight);
            Console.WriteLine($"Суммарный вес золотого карася: {goldCarpWeight}");

            var notGoldCarpWeight = carps.Where(x => x.isGold == false).Sum(w => w.Weight);
            Console.WriteLine($"Суммарный вес серебряного карася: {notGoldCarpWeight}");



            var lessThen30Years = carps.Where(a => a.Age < 30).OrderByDescending(w => w.Weight).ThenBy(a => a.Age);
            foreach (var i in lessThen30Years)
            {
                Console.WriteLine($"Караси, которые меньше 30кг: {i.Name}");
            }

            var theOldestCarp = carps.OrderByDescending(x => x.Age).FirstOrDefault();
            var threeTheFattestCarps = carps.OrderByDescending(w => w.Weight).Take(3);
            foreach (var i in threeTheFattestCarps)
            {
                Console.WriteLine($"Самые жирные караси: {i.Name}, {i.Weight} кг");
            }

            Console.WriteLine($"Самый старый карась: {theOldestCarp.Name} - {theOldestCarp.Age}");

            Console.Read();
        }


        static void SumOfElementsOfMassive()
        {
            int[] mas = { 1, 2, 3, 4, 5, 6, 7, 8, 9 };
            int sum = 0;
            foreach (var item in mas)
            {
                sum += item;
            }
            Console.WriteLine(sum);
        }


        static void SumOfEvenElementsOfMassive()
        {
            int[] mas = { 1, 2, 3, 4, 5, 6, 7, 8, 9 };
            int sum = 0;
            foreach (var item in mas)
            {
                if (item % 2 == 0)
                {
                    sum += item;
                }
            }
            Console.WriteLine(sum);
            Console.Read();

        }



        static void FindDomenFromEmail()
        {
            string IgorEmail = "1232adwda@mail.ru";

            Console.WriteLine(GetDomainByEmail(IgorEmail));
            Console.Read();
        }
        static string GetDomainByEmail(string Email)
        {
            string domain = "";
            bool isDomainSymbol = false;
            foreach (var item in Email)
            {
                if (isDomainSymbol)
                    domain += item;
                if (item == '@')
                    isDomainSymbol = true;
            }
            return domain;

        }



        static void FindDomenFromUrl()
        {
            string url = "https://metanit.com/sharp/tutorial/7.2.php";

            string[] parts = url.Split('/');
            Console.WriteLine(parts[2]);

            Console.Read();

        }



        static void SumOfColumnsTwoDemensionalArray()
        {
            int[,] a = new int[3, 5];

            Random random = new Random();

            for (int i = 0; i < 3; i++)
            {
                for (int j = 0; j < 5; j++)
                {
                    a[i, j] = random.Next(10);
                    Console.Write("{0,4}", a[i, j]);
                }
                Console.WriteLine();
            }

            for (int i = 0; i < 5; i++)
            {
                int sum = 0;
                for (int j = 0; j < 3; j++)
                {
                    sum += a[j, i];
                }
                Console.Write("{0,4}", $"{sum}");
            }
            Console.WriteLine();
            Console.Read();

        }



        static void ReplacementOfNumbers2DemensionalArray()
        {
            int[,] a = new int[5, 10];

            Random random = new Random();
            for (int i = 0; i < 5; i++)
            {
                for (int j = 0; j < 10; j++)
                {
                    a[i, j] = random.Next(100);
                    if (a[i, j] < 5)
                    {
                        a[i, j] = 111;
                    }
                    Console.Write("{0,4}", a[i, j]);
                }
                Console.WriteLine();
            }

            Console.Read();

        }



        static void MassiveFrom2PreviousElements()
        {
            List<int> massive = new List<int> { 1, 2, 3, 4, 5, 6, 7, 8, 9 };
            List<int> mas = new List<int> { };
            for (int i = 0; i < massive.Count - 1; i++)
            {
                mas.Add(massive[i] + massive[i + 1]);
            }
            foreach (var item in mas)
            {
                Console.Write($" {item}");
            }
            Console.Read();

        }



        static void RadTeilora()
        {
            static double Factorial(uint num)
            {
                if (num <= 1)
                {
                    return 1d;
                }
                return num * Factorial(num - 1);
            }

            static double Sin(double x, int n = 0, double precision = 1e-10)
            {
                var t = Math.Pow(-1, n) * Math.Pow(x, 2 * n + 1) / Factorial((uint)(2 * n + 1));
                if (Math.Abs(t) < precision)
                {
                    return t;
                }
                return t + Sin(x, n + 1, precision);
            }
            static void Main(string[] args)
            {
                var x = double.Parse(Console.ReadLine());
                var result = Sin(x);
                Console.WriteLine("Sin(x)={0:f4}", result);
                Console.WriteLine("Math.Sin(x)={0:f4}", Math.Sin(x));

                Console.ReadKey(true);
            }


        }



