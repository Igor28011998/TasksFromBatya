@model CRUD.Models.Book

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="CRUD-container">
    <h1>Добавление книги</h1>
    <div><a class="btn btn-backtolist btn-light mt-4 mb-1" role="button" asp-action="Index">Назад к списку</a></div>
    <hr />
    <div class="row">
        <div class="col-md-5">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label class="control-label col-4">Номер: </label>
                    <input type="number" asp-for="Id" class="form-control col-8" required />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label class="control-label col-4">Название: </label>
                    <input asp-for="Name" class="form-control col-8" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label class="control-label col-4">Автор: </label>
                    <input asp-for="Author" class="form-control col-8" required />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label class="control-label col-4">Количество страниц: </label>
                    <input type="number" asp-for="AmountPages" class="form-control col-8" required />
                    <span asp-validation-for="AmountPages" class="text-danger"></span>
                </div>
                <div class="form-group row mt-4">
                    <label class="control-label col-4"></label>
                    <input type="submit" value="Добавить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
